	 Date date = new Date();
	 Timestamp timestamp2 = new Timestamp(date.getTime());

	
	public LogDeAcesso logs(int id) {
		
		FrasesDTO frase = frasesFeignClient.getFraseById(id).getBody();
		return new LogDeAcesso(frase.getFrase_do_usuario(), horario_de_acesso)
